        For Each mRow As GridViewRow In Me.gvLista.Rows
            If CType(mRow.FindControl("CheckBox_Seleccionar"), CheckBox).Checked Then
                Dim mEntidad As New PROVEEDOR_CARGA
                mEntidad.ID_PROVEEDOR_CARGA = CInt(CType(mRow.FindControl("Label_ID_PROVEEDOR_CARGA"), Label).Text)
                mLista.Add(mEntidad)
