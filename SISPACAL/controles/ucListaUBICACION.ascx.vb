    Public Function DevolverSeleccionados() As ListaUBICACION
        Dim mLista As New ListaUBICACION
        For Each mRow As GridViewRow In Me.gvLista.Rows
            If CType(mRow.FindControl("CheckBox_Seleccionar"), CheckBox).Checked Then
                Dim mEntidad As New UBICACION
                mEntidad.CODIUBICACION = CInt(CType(mRow.FindControl("Label_CODIUBICACION"), Label).Text)
                mLista.Add(mEntidad)
            End If
        Next
        Return mLista
    End Function

