    Protected Sub gvLista_RowCommand(ByVal sender As Object, ByVal e As System.Web.UI.WebControls.GridViewCommandEventArgs) Handles gvLista.RowCommand
        If e.CommandName = "Editar" Then
            RaiseEvent Editando(e.CommandArgument)
        End If
    End Sub

    Protected Sub gvLista_RowDataBound(ByVal sender As Object, ByVal e As System.Web.UI.WebControls.GridViewRowEventArgs) Handles gvLista.RowDataBound
        If e.Row.RowType = DataControlRowType.DataRow Then
            If Me.PermitirEliminar Then 
                Dim a As LinkButton = CType(e.Row.FindControl("LinkButton1"), LinkButton)
                a.Attributes.Add("onclick", "if(!window.confirm('Â¿Esta seguro de Eliminar el Registro?')){return false;}")
            End If
            Dim lbDetalle As LinkButton 
            lbDetalle = e.Row.FindControl("LinkButtonDetalle") 
            Dim mLabelCODIUBICACION As Label
            mLabelCODIUBICACION = e.Row.FindControl("Label_CODIUBICACION")
            mLabelCODIUBICACION.Visible = Not Me.PermitirEditar
            lbDetalle.Visible = Me.PermitirEditar
            If Me.VerCODITARIFA Then
                Dim mDdlTARIFACODITARIFA As SISPACAL.WebUC.ddlTARIFA
                mDdlTARIFACODITARIFA = e.Row.FindControl("DdlTARIFACODITARIFA1")
                If lDdlTARIFACODITARIFA Is Nothing Then
                    lDdlTARIFACODITARIFA = New SISPACAL.WebUC.ddlTARIFA
                    lDdlTARIFACODITARIFA.Recuperar()
                End If
                Dim mTARIFACODITARIFA As String
                mTARIFACODITARIFA = CType(e.Row.FindControl("Label_CODITARIFA1"), Label).Text
                Dim lItem As ListItem = lDdlTARIFACODITARIFA.Items.FindByValue(mTARIFACODITARIFA)
                If mTARIFACODITARIFA <> "" And Not lItem Is Nothing Then
                    mDdlTARIFACODITARIFA.Items.Add(New ListItem(lItem.Text, lItem.Value))
                    mDdlTARIFACODITARIFA.SelectedValue = mTARIFACODITARIFA
                End If
            End If
            If Me.PermitirSeleccionar Then
                Dim a As LinkButton = CType(e.Row.FindControl("LinkButton_Seleccionar"), LinkButton)
                a.Text = Me.TextoSeleccionar
                a.CommandName = Me.ComandoSeleccionar
                If a.CommandName = "Check" Then
                    CType(e.Row.FindControl("CheckBox_Seleccionar"), CheckBox).Visible = True
                    a.Visible = False
                End If
            End If

        End If
    End Sub
 
    Private Sub gvLista_RowDeleting(ByVal source As System.Object, ByVal e As System.Web.UI.WebControls.GridViewDeleteEventArgs) Handles gvLista.RowDeleting
        If Me.mComponente.EliminarUBICACION(CType(Me.gvLista.Rows(e.RowIndex).FindControl("LinkButton1"), LinkButton).ToolTip) <> 1 Then
            'Si se cometio un error
            Me.AsignarMensaje("Error al Eliminar Registro", True, True)
            e.Cancel = True
        Else
        If Me.ViewState("PorTARIFA") Then
            Me.CargarDatosPorTARIFA(Me.ViewState("CODITARIFA"))
            Return
        End If
            If Me.CargarDatos() <> 1 Then
                Me.AsignarMensaje("Error al Recuperar Lista", True, True)
            End If
        End If
    End Sub
 
