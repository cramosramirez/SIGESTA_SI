        For Each mRow As GridViewRow In Me.gvLista.Rows
            If CType(mRow.FindControl("CheckBox_Seleccionar"), CheckBox).Checked Then
                Dim mEntidad As New BITACORA_USUARIO
                mEntidad.ID_BITACORA = CInt(CType(mRow.FindControl("Label_ID_BITACORA"), Label).Text)
                mLista.Add(mEntidad)
            End If
        Next
